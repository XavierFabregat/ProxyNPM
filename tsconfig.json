{
  "compilerOptions": {
    "target": "ES2017",
    "rootDir": "src",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": ["./node_modules/", "./dist/", "./__tests__/"]
}